# 서버 설정
NODE_ENV=development
PORT=3001

# JWT 설정
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRES_IN=24h

# MQTT 설정
MQTT_BROKER_URL=mqtt://localhost:1883
MQTT_CLIENT_ID=display-management-server
MQTT_USERNAME=
MQTT_PASSWORD=

# 데이터베이스 설정 (만약 사용한다면)
# DATABASE_URL=mongodb://localhost:27017/display-management
# DATABASE_NAME=display-management

# 파일 업로드 설정
UPLOAD_MAX_SIZE=10MB
UPLOAD_ALLOWED_TYPES=image/jpeg,image/jpg,image/png,image/gif

# 로깅 설정
LOG_LEVEL=info
LOG_MAX_SIZE=10m
LOG_MAX_FILES=7d

# CORS 설정
CORS_ORIGIN=http://localhost:3000

# 보안 설정
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# 개발 설정
DEBUG=display-management:* 