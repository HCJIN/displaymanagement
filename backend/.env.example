# ========================================
# Display Management System - Backend Environment Variables
# ========================================

# MQTT 브로커 설정 (클라우드 또는 로컬)
MQTT_BROKER_HOST=your-mqtt-broker-host.com
MQTT_BROKER_PORT=8883

# 백엔드 API의 MQTT 계정
ADMIN_MQTT_USERNAME=your_admin_username
ADMIN_MQTT_PASSWORD=your_admin_password
ADMIN_MQTT_CLIENT_ID=backend_api_client

# 기본 계정들
EDGE_DEVICE_ID=device_001
EDGE_MQTT_USERNAME=your_device_username
EDGE_MQTT_PASSWORD=your_device_password
FEEDER_MQTT_USERNAME=your_feeder_username
FEEDER_MQTT_PASSWORD=your_feeder_password

# 고급 MQTT 통신 설정 (연결 안정성 최적화)
MQTT_QOS=1
MQTT_RETAIN=true
MQTT_TOPIC_PREFIX=display
MQTT_RECONNECT_PERIOD=10000
MQTT_CONNECT_TIMEOUT=60000
MQTT_KEEP_ALIVE=300
MQTT_PING_TIMEOUT=30000
MQTT_USE_TLS=true
MQTT_REJECT_UNAUTHORIZED=false
MQTT_MAX_RECONNECT_ATTEMPTS=5
MQTT_PUBLISH_TIMEOUT=15000
MQTT_COMMAND_TIMEOUT=10000

# 성능 디버깅 설정
DEBUG_MQTT=true
DEBUG_MQTT_MESSAGES=false
DEBUG_MQTT_TOPICS=false

# 장치 연결 모니터링 설정
HEARTBEAT_INTERVAL=120000
HEARTBEAT_TIMEOUT=600000
CONNECTION_CHECK_INTERVAL=60000

# 웹 서버 및 네트워크 설정
SOCKET_PORT=7200
SOCKET_TIMEOUT=10000
WEB_SERVER_HOST=192.168.1.100
WEB_SERVER_PORT=5002
WEB_SERVER_PROTOCOL=http

# 백업 TCP 설정
BACKUP_TCP_HOST=192.168.1.100
BACKUP_TCP_PORT=7200
ENABLE_TCP_BACKUP=true

# 상태 모니터링 설정
HEALTH_CHECK_INTERVAL=60000
SYSTEM_REPORT_INTERVAL=600000
ENABLE_PERFORMANCE_MONITORING=true
MEMORY_MONITORING=true
CPU_MONITORING=true

# 보안 및 제한 설정
API_RATE_LIMIT_ENABLED=true
API_RATE_LIMIT_WINDOW=900000
API_RATE_LIMIT_MAX_REQUESTS=100
MAX_REQUEST_SIZE=50mb
MAX_JSON_SIZE=10mb

# 개발 설정
DEVELOPMENT_MODE=true
ENABLE_MOCK_DEVICES=true
ENABLE_TEST_ENDPOINTS=true
VERBOSE_LOGGING=false

# 설정 가이드:
# 1. MQTT_BROKER_HOST를 실제 MQTT 브로커 주소로 변경
# 2. WEB_SERVER_HOST를 실제 서버 IP로 변경
# 3. 모든 비밀번호를 보안이 강한 값으로 변경
# 4. 운영환경에서는 DEBUG 옵션들을 false로 설정
